#:kivy 2.1.0

<LottoBall>:
    size_hint: None, None
    size: '45dp', '45dp'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.2
        Ellipse:
            size: self.size[0] - 2, self.size[1] - 2
            pos: self.pos[0] + 1, self.pos[1] - 1
        Color:
            rgba: root.ball_color
        Ellipse:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 0.4
        Ellipse:
            size: self.size[0] * 0.3, self.size[1] * 0.3
            pos: self.pos[0] + self.size[0] * 0.15, self.pos[1] + self.size[1] * 0.35

    Label:
        text: str(root.number)
        center: root.center
        font_size: '16sp'
        bold: True
        color: 1, 1, 1, 1

<Card@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: '12dp'
    spacing: '8dp'
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]
        Color:
            rgba: 0, 0, 0, 0.1
        RoundedRectangle:
            pos: self.pos[0] + 2, self.pos[1] - 2
            size: self.size
            radius: [8]

<ActionButton@Button>:
    size_hint_y: None
    height: '48dp'
    font_size: '16sp'
    bold: True
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]

